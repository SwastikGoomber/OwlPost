# Database Configuration
MONGODB_URI=mongodb://localhost:27017/owlpost
PORT=5000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Email Server Configuration (Self-hosted)
EMAIL_HOST=localhost
EMAIL_PORT_SMTP=25
EMAIL_PORT_IMAP=143
EMAIL_USE_TLS=false
EMAIL_DOMAIN=owlpost.sileistar.me

# Admin Configuration
ADMIN_EMAIL=admin@owlpost.sileistar.me
ADMIN_PASSWORD=your_admin_password_here

# Dovecot/Postfix Settings
MAIL_DIR=/var/mail/owlpost/vhosts
MAIL_USER=owlpost
MAIL_GROUP=mail
